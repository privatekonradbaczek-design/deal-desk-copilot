# ─────────────────────────────────────────────
# Deal Desk Copilot — Environment Configuration
# Copy this file to .env and fill in values.
# NEVER commit .env to version control.
# ─────────────────────────────────────────────

# ── Application ──────────────────────────────
APP_VERSION=0.1.0
LOG_LEVEL=INFO
ENVIRONMENT=development

# ── PostgreSQL ────────────────────────────────
POSTGRES_USER=dealdesk
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=dealdesk_db
POSTGRES_PORT=5432

# ── Redpanda / Kafka ──────────────────────────
REDPANDA_BOOTSTRAP_SERVERS=redpanda:9092

# ── Azure OpenAI ──────────────────────────────
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_EMBEDDING_DIMENSIONS=1536

# ── Retrieval ─────────────────────────────────
RETRIEVAL_SIMILARITY_THRESHOLD=0.75
RETRIEVAL_TOP_K=5

# ── Guardrail ─────────────────────────────────
INJECTION_SCORE_THRESHOLD=0.70
MAX_QUERY_LENGTH=4096
MAX_DOCUMENT_SIZE_MB=50

# ── Storage ───────────────────────────────────
STORAGE_BASE_PATH=/app/storage

# ── Token Budgets ─────────────────────────────
MAX_CONTEXT_TOKENS=8192
TOKEN_BUDGET_PER_TENANT_DAILY=500000

# ── Service URLs (internal Docker network) ────
RETRIEVAL_SERVICE_URL=http://retrieval_service:8000
GUARDRAIL_SERVICE_URL=http://guardrail_service:8000
